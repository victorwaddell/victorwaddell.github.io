<!DOCTYPE html>
<html>
  <head>
    <title>GPBO</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%# javascript_include_tag 'application' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Bitter|Josefin+Sans|Nunito|Varela+Round" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css2?family=Montserrat&family=Open+Sans:wght@400;500;600&display=swap" %>

  </head>

  <body>
    <!-- Partials for the topbar and navigation -->
    <% if logged_in? && ( current_user.role?(:admin)) %>
      <%= render :partial => "partials/nav" %>
    <% elsif logged_in? && current_user.role?(:customer) %>
      <%= render :partial => "partials/nav_customer" %>
    <% else %>
      <%= render :partial => "partials/nav_guest" %>
    <% end %>
    
    <!-- div id test for about.html.erb -->
    <div id="main_content">
    </div>

    <div class="container">
      <div class="row">
        <div class="col s12">
          <!-- Flash messages appear here -->
          <%= render :partial => "partials/flash" %>

          <!-- MAIN CONTENT OF TEMPLATE GOES HERE -->
          <%= yield %>

        </div>
      </div>
    </div>
    
    <%= render :partial => "partials/footer" %> 
    <%= javascript_include_tag 'application' %>  

    <%# <% flash.each do |message_type, message| %>
      <%#= javascript_tag "M.toast({html: '<p>#{message}</p>', displayLength: 4000})" %>
    <%# end %> 

  </body>
  
</html>
