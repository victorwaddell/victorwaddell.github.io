<div class="card">
  <div class="card-content">
    <h4>Order Details</h4><hr><br>
    <br>    
    <p><b>Date: </b><%= @order.date.strftime("%B %d, %Y") %></p><br>
    <p><b>Customer: </b><%= @order.customer.proper_name %></p><br>
    <p><b>Recipient: </b><%= @order.address.recipient %></p><br>
    <p><b>Item Count: </b><%= @order.order_items.count %> 
    <% if @order.order_items.count == 1 %>
      Item</p><br>
    <% else %>
      Items</p><br>
    <% end %>
    
    <h5>Order Cost Breakdown</h5><br>
    <p><b>Product Subtotal: </b><%= number_to_currency(@order.products_total) %></p><br>
    <p><b>Shipping: </b><%= number_to_currency(@order.shipping) %></p><br>
    <p><b>Grand Total: </b><%= number_to_currency(@order.grand_total) %></p><br>


    <h5>Items in Order</h5><br>
    <% for order_item in @order.order_items %>
    <div class="card z-depth-0">
        <div class="card-action">
      <p><b>Name: </b><%= link_to order_item.item.name, item_path(order_item.item) %></p>
      <p><b>Quantity: </b><%= order_item.quantity %></p>
      <p><b>Description: </b><%= order_item.item.description %></p>
      </div>
    </div>
    <% end %>


  </div>
</div>